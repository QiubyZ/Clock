<rootWindow>
    MDBoxLayout:
        id: box
        orientation: "vertical"
        size_hint: 1, 1
        
        BinaryClock:
            id: clock
        floatWindow:
            id: floats

        MDBoxLayout:
            size_hint: 1, None
            pos_hint: {"center_x": .5}
            MDRectangleFlatIconButton:
                id: button
                icon: ""
                size_hint: 1, None
                on_release: app.on_settings_popup()
                md_bg_color: app.theme_cls.primary_color
                icon_color: app.theme_cls.primary_light
    
    MDTopAppBar:
        id: topbar
        pos_hint: {"top": 1}
        title: "PyBinClock"
        size_hint: 1, None
        md_bg_color: app.theme_cls.primary_color


<ItemListStyle@OneLineAvatarIconListItem>
    size_hint: 1, None
    IconLeftWidgetWithoutTouch:
        icon: "theme-light-dark"
    rightCheckbox:
        active: True if app.theme_cls.theme_style == "Dark" else False
        on_active: app.on_style_active(*args)

<ItemListCap@OneLineAvatarIconListItem>
    size_hint: 1, None
    IconLeftWidgetWithoutTouch:
        icon: "closed-caption"
    rightCheckbox:
        active: True if app.captions == True else False
        on_active: app.on_captions_active(*args)

<ItemListNum@OneLineAvatarIconListItem>
    size_hint: 1, None
    IconLeftWidgetWithoutTouch:
        icon: "format-list-numbered"
    rightCheckbox:
        active: True if app.numbers == True else False
        on_active: app.on_numbers_active(*args)

<ItemListSec@OneLineAvatarIconListItem>
    size_hint: 1, None
    IconLeftWidgetWithoutTouch:
        icon: "clock"
    rightCheckbox:
        active: True if app.seconds == True else False
        on_active: app.on_seconds_active(*args)

<ItemListAuto@OneLineAvatarIconListItem>
    size_hint: 1, None
    IconLeftWidgetWithoutTouch:
        icon: "reload"
    rightCheckbox:
        active: False
        on_active: app.on_auto_active(*args)


<ItemButtonSheet@MDIconButton>
    icon: ""
    size_hint: 1/(app.COLORS-1), 1/(app.COLORS-1)
    rounded_button: True
    

<floatWindow@BoxLayout>:
    id: float
    orientation: "vertical"
    size_hint_y: None
    height: "300dp"
    radius: 60
    MDScrollView:
        id: scroll
        do_scroll_x: False
        MDBoxLayout:
            radius: 60
            size_hint_y: None
            height: self.minimum_height
            orientation: "vertical"
            padding: "20dp"
            spacing: 10
            md_bg_color: app.theme_cls.primary_color
#            MDRectangleFlatIconButton:
#                radius: 48
#                icon: "dots-grid"
#                size_hint: 1, None
#                on_release: app.popup.dismiss()
#                md_bg_color: app.theme_cls.primary_light
#                rounded_button: False
            MDBoxLayout:
                orientation: "vertical"
                size_hint_y: None
                padding: "2dp"
                MDLabel:
                    text: "COLOURS"
            MDGridLayout:
                id: gridcolor
                radius: 48
                cols: 8 #app.COLORS
                spacing: "2dp"
                padding: 12
                size_hint: 1, None
                height: (self.width/8)*2
                md_bg_color: app.theme_cls.primary_light

#                adding item manually
#                replaced by loop in python class
                ItemButtonSheet:
                    text: "Red"
                    on_release: app.on_selected_grid(self.text)
                    md_bg_color: .8, .2, .2, 1
